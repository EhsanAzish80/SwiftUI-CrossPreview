{
  "name": "swiftui-crosspreview",
  "displayName": "SwiftUI CrossPreview",
  "version": "0.1.0",
  "description": "A cross-platform SwiftUI-style preview engine for VS Code. Parses SwiftUI with tree-sitter, builds a layout tree, and renders it in a webview using HTML/CSS. No Mac, no Xcode, fully local. An open, extensible approach to bringing SwiftUI previews to any OS.",
  "publisher": "swiftui-crosspreview",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:swift"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "swiftui-crosspreview.openPreview",
        "title": "SwiftUI: Open Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tree-sitter": "^0.20.0",
    "tree-sitter-swift": "^0.4.0"
  },
  "keywords": [
    "swift",
    "swiftui",
    "preview",
    "tree-sitter"
  ],
  "author": "",
  "license": "MIT"
}
