{
  "name": "swiftui-crosspreview",
  "displayName": "SwiftUI CrossPreview",
  "version": "0.0.2",
  "description": "Cross-platform SwiftUI preview for VS Code. Parses SwiftUI with tree-sitter, builds a layout tree, and renders an approximate UI in a webview using HTML/CSS â€” no Mac, no Xcode.",
  "publisher": "ehsanazish",
  "icon": "media/icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EhsanAzish80/SwiftUI-CrossPreview"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "swiftuiPreview.open",
        "title": "SwiftUI CrossPreview: Open Preview"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "compile": "tsc -p .",
    "lint": "eslint src --ext ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "vsce package",
    "publish": "vsce publish",
    "install:tree-sitter": "npm install --no-optional --ignore-scripts tree-sitter tree-sitter-swift || true"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "tree-sitter": "^0.21.0",
    "tree-sitter-swift": "^0.6.0"
  },
  "dependencies": {},
  "keywords": [
    "swift",
    "swiftui",
    "preview",
    "tree-sitter",
    "ios",
    "apple",
    "cross-platform",
    "visualization"
  ],
  "author": "Ehsan Azish",
  "license": "MIT"
}
